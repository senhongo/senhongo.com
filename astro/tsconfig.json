{
  "extends": [
    "astro/tsconfigs/strict",
  ],
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist",
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}
